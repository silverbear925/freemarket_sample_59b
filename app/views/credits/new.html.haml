.sign-up
  =render '/users/registrations/sign_up_header'
  .sign-up__form
    %h3.sign-up__form-heading お支払い方法
    .sign-up__form-container
      = form_tag(registrations_finish_path, method: :get, id: 'charge-form',  name: "inputForm") do
        .info__form-sentence
          %label カード番号 
          %span 必須
        = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        %ul.credit__list
          %li
            =link_to ""  do
              =image_tag "/credit/card_logo.png",class:"credit__list-image"
          %li
            =link_to ""  do
              =image_tag "/credit/master300px.gif",class:"credit__list-image"
          %li
            =link_to ""  do
              =image_tag "/credit/saison300px.gif",class:"credit__list-image"
          %li
            =link_to ""  do
              =image_tag "/credit/jcb300px.gif",class:"credit__list-image"
          %li
            =link_to ""  do
              =image_tag "/credit/diners300px.gif",class:"credit__list-image"

        %br
        .info__form-sentence
          %label 有効期限
          %span 必須
        %select#exp_month{name: "exp_month", type: "text"}
          %option{value: ""} --
          %option{value: "1"}01
          %option{value: "2"}02
          %option{value: "3"}03
          %option{value: "4"}04
          %option{value: "5"}05
          %option{value: "6"}06
          %option{value: "7"}07
          %option{value: "8"}08
          %option{value: "9"}09
          %option{value: "10"}10
          %option{value: "11"}11
          %option{value: "12"}12
        %span 月/
        %select#exp_year{name: "exp_year", type: "text"}
          %option{value: ""} --
          %option{value: "2019"}19
          %option{value: "2020"}20
          %option{value: "2021"}21
          %option{value: "2022"}22
          %option{value: "2023"}23
          %option{value: "2024"}24
          %option{value: "2025"}25
          %option{value: "2026"}26
          %option{value: "2027"}27
          %option{value: "2028"}28
          %option{value: "2029"}29
        %span 年
        %br
        %label セキュリティコード
        = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        #card_token
        = submit_tag "次に進む", id: "token_submit"
        -# =f.submit  "次に進む" ,class:"sign-up-next "
        
=render '/momo/footter'
