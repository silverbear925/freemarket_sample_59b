.single-container
  = render '/momo/header'

  .single__main
    .l-single-container
      .l-single-head
        購入内容の確認
      .buy-content
        .buy-content-inner_buy
          .buy-item-image
            =image_tag @product.images[0].src.url,class:"buy__image__Photo"
            .buy-item-name
              = @product.name

          .buy-price-boxs
            .buy-price
              %ul.buy-price-box
                %li.buy-price-ja
                  ¥#{@product.price}
                %li.item-shipping-fee
                  送料込み
              .buy-accordion
                ポイントはありません
              %ul.buy-price-table
                %il.buy-price-table-row
                  .buy-price-table-cell-left
                    支払い金額
                  .buy-price-table-cell-right
                    ¥#{@product.price}
              .purchase__button
                .purchase__button__buy
                  = form_tag(action: :pay, method: :post) do
                    %script.payjp-button{:src => "https://checkout.pay.jp", :type => "text/javascript" ,"data-text" => "購入する" ,"data-key" => "pk_test_942828262fd3fbb4704e8bd7"}
                    -# =link_to crente_buy_product_path do


      .buy-content-2
        .buy-content-inner_buy
          配送先
          .buy-user-info-text
            %p
            = @adress.zipcode
            %br/
            = @adress.prefectures
            = @adress.city
            = @adress.building
            %br/
            = @product.name
            .buy-user-info-fix
              =link_to "", class: "buy-user-info-fix-l" do
                変更する
                %i.fas.fa-chevron-right
      .buy-content-3
        .buy-content-inner_buy
          %h3 支払い方法
          - if @default_card_information.blank?
            %br /
          - else
            
            = "**** **** **** " + @default_card_information.last4
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
          %br
          .buy-user-info-fix
            =link_to "", class: "buy-user-info-fix-l" do
              変更する
              %i.fas.fa-chevron-right




  = render '/momo/footter'










